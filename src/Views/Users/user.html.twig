{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <h1>Profil de {{ user.name }} {{ user.lastName }}</h1>
        <div class="row">
            <div class="col-md-4">
                {% if user.image %}
                    <img src="/Blog/public/users/{{ user.image }}" class="card-img-top" style="height: 250px;" alt="Image du profil "/>
                    {% else %}
                <img src="/Blog/public/users/avatar.png" class="card-img-top img-fluid" alt="Post Image">
                 {% endif %}
            </div>
            <div class="col-md-8">
                <form action="/Blog/user/updateProfile/{{ user.id }}" method="post" enctype="multipart/form-data">
                    <ul class="list-group">
                        <li class="list-group-item">
                            <strong><label for="name" class="form-label">Nom :</label></strong>
                            <input type="text" class="form-control" id="name" name="name" value="{{ user.name|capitalize }}">
                        </li>
                        <li class="list-group-item">
                            <strong><label for="lastName" class="form-label">Prénom :</label></strong>
                            <input type="text" class="form-control" id="lastName" name="lastName" value="{{ user.lastName|capitalize }}">
                        </li>
                        <li class="list-group-item">
                            <strong><label for="email" class="form-label">Email :</label></strong>
                            <input type="email" class="form-control" id="email" name="email" value="{{ user.email }}">
                        </li>
                        <li class="list-group-item">
                            <strong><label for="image" class="form-label">Image de profil :</label></strong>
                            <input type="file" class="form-control" id="image" name="image">
                        </li>
                        <li class="list-group-item">
                            <strong><label for="role" class="form-label">Rôle :</label></strong>
                            <input type="text" class="form-control" id="role" name="role" value="{{ user.role|capitalize }}" disabled >
                        </li>
                        <li class="list-group-item">
                            <strong><label for="pseudo" class="form-label">Pseudo :</label></strong>
                            <input type="text" class="form-control" id="pseudo" name="pseudo" value="{{ user.pseudo|capitalize }}">
                        </li>
                        <li class="list-group-item">
                            <strong><label for="currentPassword" class="form-label">Mot de passe actuel :</label></strong>
                            <input type="password" class="form-control" id="currentPassword" name="currentPassword" required >
                        </li>
                    </ul>
                    <div class="d-flex justify-content-between mt-3">
                        <button type="submit" class="btn btn-secondary">Enregistrer les modifications</button>
                        <a href="/Blog/showPassword" class="btn btn-secondary">Modifier le mot de passe</a>
                        <form action="/Blog/user/deleteUser/{{ user.id }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer votre profil?');">
                            <button type="submit" class="btn btn-danger">Supprimer le compte</button>
                        </form>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

