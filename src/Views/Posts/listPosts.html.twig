{% extends 'base.html.twig' %}
{% block title %}
{% endblock %}
{% block content %}
	<div class="mt-4">
		<div class="row">
			{% for post in posts %}
				<div class="col-md-6 mb-4">
					<div class="card">
						<div class="card-header bg-secondary text-white">
							<h5 class="card-title mb-0">{{ post.title|upper }}</h5>
						</div>
						<div class="card-body">
							<p class="card-text">{{ post.chapo|capitalize }}</p>
							<img src="public/images/logo.png" class="card-img-top" alt="..." style="width: 100px;">
							<p class="card-text">Auteur: {{ post.author }}</p>
							<p class="card-text">Dernière mise à jour: {{ post.updateAt|date("d/m/Y") }}</p>
						</div>
						<div class="card-footer">
							<div class="d-flex justify-content-between align-items-center">
								<a href="/Blog/post/{{ post.id }}" class="btn btn-primary">Lire la suite</a>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
