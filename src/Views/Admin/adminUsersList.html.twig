{% extends 'admin.html.twig' %}

{% block content %}
    <div class="container">
        <h1 class="my-4">LISTE DES UTILISATEURS</h1>
        <div class="row">
            {% for user in users %}
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header">
                            <h5 class="card-title">{{ user.lastName|upper }}</h5>
                            <p class="card-text">{{ user.name|capitalize }}</p>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    {% if user.image %}
                                        <img src="/Blog/public/users/{{ user.image }}" class="card-img-top"
                                             alt="Image du profil "/>
                                    {% else %}
                                        <img src="/Blog/public/users/avatar.png" class="card-img-top img-fluid"
                                             alt="Post Image">
                                    {% endif %}
                                </div>
                                <div class="col-md-8">
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item"><strong>Email:</strong> {{ user.email }}</li>
                                        <li class="list-group-item"><strong>Créé
                                                le:</strong> {{ user.createdAt|date('d/m/Y') }}</li>
                                        <li class="list-group-item"><strong>Pseudo:</strong> {{ user.pseudo }}</li>
                                        <li class="list-group-item"><strong>Rôle:</strong> {{ user.role }}</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <a href="/Blog/admin/users/show/{{ user.id }}"
                               class="btn btn-secondary">Modifier/Supprimer</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

