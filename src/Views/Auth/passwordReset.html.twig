{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block content %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="card">
					<div class="card-header">Réinitialisation du mot de passe</div>

					<div class="card-body">
						<p>Veuillez saisir votre adresse e-mail pour réinitialiser votre mot de passe.</p>
						<form action="/Blog/reset" method="post">
							<div class="form-group">
								<label for="email">Adresse e-mail :</label>
								<input type="email" id="email" name="email" class="form-control" required>
							</div>
							<input type="hidden" name="token" value="{{ resetToken }}">
							<button type="submit" class="btn btn-primary">Envoyer</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
