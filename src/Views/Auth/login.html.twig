{% extends 'base.html.twig' %}

{% block content %}

    <div class="container mt-5 mb-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card p-5" style="min-height: 500px;">
                    <div class="card-body">
                        <h1 class="card-title text-center mb-5">Connexion</h1>
                        <form action="/Blog/loginProcess" method="post" id="login">
                            <div class="mb-4">
                                <label for="email" class="form-label">Adresse e-mail :</label>
                                <input type="email" class="form-control" id="email" name="email"
                                       placeholder="Votre adresse email ici..." required>
                            </div>
                            <div class="mb-4">
                                <label for="password" class="form-label">Mot de passe :</label>
                                <input type="password" class="form-control" id="password" name="password"
                                       placeholder="Votre mot de passe ici..." required>
                            </div>
                            <div class="d-grid gap-2 mb-4">
                                <button type="submit" name="submit" class="btn btn-secondary">Se connecter</button>
                            </div>
                            <div class="d-grid gap-2 mb-4">
                                <label>
                                    <input type="checkbox" name="remember_me" value="1"> Se souvenir de moi
                                </label>
                            </div>
                            <div class="container">
                                <div class="row justify-content-between mb-4">
                                    <div class="col-auto">
                                        <a href="/Blog/first-connection" class="btn btn-secondary">Première connexion
                                            ?</a>
                                    </div>
                                    <div class="col-auto">
                                        <a href="/Blog/showPassword" class="btn btn-secondary">Mot de passe oublié ?</a>
                                    </div>
                                </div>
                            </div>
                            <input type="hidden" name="csrfToken" value="{{ csrfToken }}">
                        </form>
                        <div class="text-center mt-4">
                            <p>Vous n'avez pas de compte ? <a href="/Blog/inscription">Inscrivez-vous ici</a>.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
